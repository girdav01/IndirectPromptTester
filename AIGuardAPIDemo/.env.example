# Trend Vision One AI Guard Configuration
# ============================================

# Required: Your AI Guard API key from Trend Vision One console
AI_GUARD_API_KEY=your-api-key-here

# API endpoint (default: https://api.xdr.trendmicro.com)
AI_GUARD_BASE_URL=https://api.xdr.trendmicro.com

# Region: us, eu, ap, etc. (default: us)
AI_GUARD_REGION=us

# Request timeout in seconds (default: 30)
AI_GUARD_TIMEOUT=30


# Security Settings
# ============================================

# Risk score threshold 0.0-1.0 (default: 0.5)
# Higher values = more permissive, lower values = more strict
AI_GUARD_RISK_THRESHOLD=0.5

# Block requests when threats detected (default: true)
AI_GUARD_BLOCK_ON_THREAT=true

# Security level: cautious, moderate, aggressive (default: moderate)
AI_GUARD_SECURITY_LEVEL=moderate


# Performance Settings
# ============================================

# Enable caching of scan results (default: true)
AI_GUARD_CACHE_ENABLED=true

# Cache TTL in seconds (default: 300)
AI_GUARD_CACHE_TTL=300

# Enable async scanning for better performance (default: false)
AI_GUARD_ASYNC_ENABLED=false


# Logging Settings
# ============================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL (default: INFO)
AI_GUARD_LOG_LEVEL=INFO

# Log threats detected (default: true)
AI_GUARD_LOG_THREATS=true

# Log all requests (default: false)
AI_GUARD_LOG_ALL_REQUESTS=false


# LLM Provider API Keys (for demos)
# ============================================

# OpenAI API key (for running demos)
OPENAI_API_KEY=your-openai-key-here

# Anthropic API key (optional)
ANTHROPIC_API_KEY=your-anthropic-key-here

# Cohere API key (optional)
COHERE_API_KEY=your-cohere-key-here

# Google AI API key (optional)
GOOGLE_API_KEY=your-google-key-here


# Integration-Specific Settings
# ============================================

# LangChain settings
LANGCHAIN_TRACING_V2=false
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com
LANGCHAIN_API_KEY=your-langchain-key-here

# LiteLLM settings
LITELLM_LOG=INFO
LITELLM_DROP_PARAMS=true


# Demo Configuration
# ============================================

# Enable demo mode (uses simulated LLM responses)
DEMO_MODE=false

# Verbose output in demos
DEMO_VERBOSE=true


# Development Settings
# ============================================

# Enable debug mode (more verbose logging)
DEBUG=false

# Test API endpoint (for development)
TEST_API_ENDPOINT=http://localhost:8000


# Optional: Team-Based Controls
# ============================================

# Comma-separated list of team IDs that have AI Guard enabled
# Leave empty to enable for all teams
AI_GUARD_ENABLED_TEAMS=

# Comma-separated list of API keys that have AI Guard enabled
# Leave empty to enable for all keys
AI_GUARD_ENABLED_KEYS=
